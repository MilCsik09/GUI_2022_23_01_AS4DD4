<Window x:Class="GUI_2022_23_01_AS4DD4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_2022_23_01_AS4DD4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" SizeChanged="Window_SizeChanged">
    <Grid x:Name="grid">
        <StackPanel x:Name="stack">
        <Button x:Name="load" Content="Load" HorizontalAlignment="Center" VerticalAlignment="Top" Click="load_Click" Margin="30"/>
        <Button x:Name="create" Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Top" Click="create_Click" Margin="20"/>
        <Button x:Name="shop" Content="Shop" HorizontalAlignment="Center" VerticalAlignment="Top" Click="shop_Click" Margin="20"/>
            <Button x:Name="save" Content="Save" HorizontalAlignment="Center" VerticalAlignment="Top" Click="save_Click" Margin="20"/>
            <Button x:Name="exit" Content="Exit" HorizontalAlignment="Center" VerticalAlignment="Top" Click="exit_Click" Margin="20"/>
        </StackPanel>
        <local:Display x:Name="display"/>
        <local:Display HorizontalAlignment="Left" Height="100" Margin="197,110,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
